
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
              android:orientation="vertical"
    tools:context="vsd.co.za.sambugapp.enterDataActivity"
    android:background="#ff89878c">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
        android:id="@+id/txtBlock"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Block"
            android:layout_weight="6"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spnBlocks"
            android:layout_gravity="right"
            android:layout_weight="4"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of Trees"
        android:id="@+id/tvNumberOfTrees"
        android:textSize="24dp"
        android:layout_gravity="center_vertical"
            android:layout_weight="8"/>

        <NumberPicker
            android:layout_height="wrap_content"
            android:id="@+id/npNumTrees"
            android:layout_width="wrap_content"
            android:layout_weight="2"/>
    </LinearLayout>


        <ScrollView
            android:id="@+id/addedBugs"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <LinearLayout
                android:id="@+id/addedBugsContent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>
        </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="10">
        <TextView
            android:layout_width="97dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/numBugs"
            android:id="@+id/tvNumberOfBugs"
            android:textSize="24dp"
            android:layout_gravity="center_vertical"
            android:padding="3dip"
            android:layout_weight="8"
            />

        <NumberPicker
            android:id="@+id/npNumBugs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="2"></NumberPicker>
    </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/bugType"/>
                <Button
                    android:padding="3dip"
                    style="?android:attr/buttonStyleSmall"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/btnSelectBug"
                    android:id="@+id/btnSelectBug"
                    android:onClick="sendToIdentificationActivity"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toRightOf="@id/tvNumberOfBugs"
                    android:layout_gravity="bottom"/>
            </LinearLayout>


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addBug"
                android:id="@+id/button"
                android:layout_below="@id/tvNumberOfBugs"
                android:onClick="addBug" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Done"
                android:onClick="sendToScoutTripActivity"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
