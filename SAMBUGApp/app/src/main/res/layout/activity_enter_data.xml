<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="vsd.co.za.sambugapp.enterDataActivity">

    <Spinner
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/spnBlocks"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:layout_toEndOf="@+id/btnDone"
        android:layout_toRightOf="@+id/btnDone" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of Trees"
        android:id="@+id/tvNumberOfTrees"
        android:textSize="24dp"
        android:layout_below="@+id/spnBlocks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="65dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Number of Bugs"
        android:id="@+id/tvNumberOfBugs"
        android:textSize="24dp"
        android:layout_alignTop="@+id/npNumBugs"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="42dp" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Bug Type"
        android:id="@+id/tvBugType"
        android:textSize="24dp"
        android:layout_alignTop="@+id/btnSelectBug"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
    style="?android:attr/buttonStyleSmall"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="@string/btnSelectBug"
        android:id="@+id/btnSelectBug"
        android:onClick="sendToIdentificationActivity"
        android:layout_above="@+id/btnDone"
        android:layout_alignRight="@+id/spnBlocks"
        android:layout_alignEnd="@+id/spnBlocks" />

    <Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:text="@string/btnDoneStop"
        android:id="@+id/btnDone"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="sendToScoutTripActivity" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Block"
        android:id="@+id/tvBlock"
        android:textSize="24dp"
        android:layout_alignBottom="@+id/spnBlocks"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npNumTrees"
        android:layout_below="@+id/spnBlocks"
        android:layout_alignLeft="@+id/btnSelectBug"
        android:layout_alignStart="@+id/btnSelectBug" />

    <NumberPicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/npNumBugs"
        android:layout_below="@+id/npNumTrees"
        android:layout_alignLeft="@+id/npNumTrees"
        android:layout_alignStart="@+id/npNumTrees" />


</RelativeLayout>
