<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="vsd.co.za.sambugapp.IdentificationActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_alignParentTop = "true"
        android:weightSum="1"
        android:id="@+id/linearLayout">
        <ImageView
            android:layout_width = "140dp"
            android:layout_height= "120dp"
            android:id="@+id/ivFieldPicture"
            android:layout_marginTop="5dp"
            android:contentDescription="@string/identification_activity_description_image_view"
            android:layout_centerHorizontal="true"
             />

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/species1"
        android:layout_below="@id/ivFieldPicture"
        >

        <ImageButton
            android:src="@drawable/coconut"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="@dimen/galleryPicHeight"
            android:layout_weight="1"
            android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
        <ImageButton
            android:src="@drawable/coconut"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="@dimen/galleryPicHeight"
            android:layout_weight="1"
            android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
        <ImageButton
            android:src="@drawable/coconut"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="@dimen/galleryPicHeight"
            android:layout_weight="1"
            android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
        <ImageButton
            android:src="@drawable/coconut"
            android:scaleType="fitXY"
            android:layout_width="0dp"
            android:layout_height="@dimen/galleryPicHeight"
            android:layout_weight="1"
            android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/species2"
            android:layout_below="@id/species1"
            >

            <ImageButton
                android:src="@drawable/green_veg"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
            <ImageButton
                android:src="@drawable/green_veg"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
            <ImageButton
                android:src="@drawable/green_veg"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
            <ImageButton
                android:src="@drawable/green_veg"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/species3"
            android:layout_below="@id/species2"
            >

            <ImageButton
                android:src="@drawable/yellowed_edged"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
            <ImageButton
                android:src="@drawable/yellowed_edged"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
