                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/species4">
            <Button
            android:layout_width="0dp"
                android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="@string/identification_activity_autoClassifyButtonText"/>
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/identification_activity_doneButtonText"
                />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>
