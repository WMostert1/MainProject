                android:src="@drawable/yellowed_edged"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/species4"
            android:layout_below="@id/species3"
            >

            <ImageButton
                android:src="@drawable/two_spotted"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
            <ImageButton
                android:src="@drawable/two_spotted"
                android:scaleType="fitXY"
                android:layout_width="0dp"
                android:layout_height="@dimen/galleryPicHeight"
                android:layout_weight="1"
                android:contentDescription="@string/identification_activity_speciesSpecificationDescription"/>
