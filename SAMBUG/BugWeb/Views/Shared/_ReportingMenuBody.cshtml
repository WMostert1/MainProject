@{
    Layout = null;
}


<md-chips ng-repeat="constraint in constraints.misc" ng-model="constraint.selected" md-autocomplete-snap md-require-match="true">
    <md-autocomplete md-search-text="constraint.searchText"
                     md-items="item in filterSuggestions(constraint.list, constraint.searchText)"
                     md-item-text="item"
                     placeholder="{{constraint.title}}"
                     md-min-length="0">
        <md-item-template>
            <span md-highlight-text="constraint.searchText">{{item}}</span>
        </md-item-template>
        <md-not-found>
            No matches found for "{{constraint.searchText}}".
        </md-not-found>
    </md-autocomplete>
    <md-chip-template>
        {{$chip}}
    </md-chip-template>
</md-chips>

