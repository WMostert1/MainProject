﻿<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SAMBUG</title>
    <link rel="stylesheet" href="http://css-spinners.com/css/spinner/whirly.css" type="text/css">
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/spinner")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/Scripts/xdate.js")
    @Scripts.Render("~/bundles/customJS")
    @RenderSection("JavaScript", required: false)
    @RenderSection("styles", required: false)
</head>
<body>
  
    <div style="background-color:#A3DCA3" class="navmenu navmenu-default navmenu-fixed-left offcanvas">
        <a style="background-color:#4DB870" class="navmenu-brand" href="~/Home/Index">SAMBUG</a>
        <ul class="nav navmenu-nav">
            <li><a href="~/Home/Index">Home</a></li>
            <!--<li><a href="#">Login</a></li>-->
            <!-- <li><a href="#">Register</a></li>-->
           
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Farm Management<b class="caret"></b></a>
                <ul class="dropdown-menu navmenu-nav">
                    <li><a href="~/FarmManagement/EditBlocks">Edit my Blocks</a></li>
                    <li><a href="~/FarmManagement/Treatments">Enter Treatment Data</a></li>
                </ul>
            </li>

            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Reporting<b class="caret"></b></a>
                <ul class="dropdown-menu navmenu-nav">
                    <li><a href="~/Reporting/Charts">View Chart</a></li>
                    <li><a href="~/Reporting/Tabular">View Table</a></li>
                    <li><a href="~/Reporting/Map">View Heat Map</a></li>
                </ul>
            </li>
            <li><a href="~/Authentication/EditUserRoles">Manage Users</a></li>
            <li><a href="~/Home/Logout">Logout</a></li>
            <li><a href="#">About Us</a></li>
        </ul>
    </div>

    <div class="navbar navbar-default navbar-fixed-top">
        <button type="button" class="navbar-toggle" data-toggle="offcanvas" data-target=".navmenu" data-canvas="body">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
    </div>

    <div class="container">
        @RenderBody()
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
