@{
    ViewBag.Title = "Login Page";
    Layout = "~/Views/Shared/Authentication.cshtml";
}


<div class="row">
    <div class="col-lg-3"></div>
        <div class="col-lg-6 text-center">
            <h1 class="align-left">Welcome to SAMBUG</h1>
            <form class="form-horizontal" role="form" action='@Url.Action("login", "authentication")' method="POST">
                <fieldset>
                    <legend>Please log in to continue</legend>
                    <div class="row">
                        <div class="col-sm-3"></div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input type="email" class="form-control" name="Username" placeholder="Email" required>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" name="Password" placeholder="Password" required>
                            </div>
                        </div>
                    </div>
                   
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Log in</button>
                    </div>
                    <div class="form-group">
                        <p>
                            Click <a class="btn-link" href="@Url.Action("register","home")">here</a> to register
                        </p>
                    </div>
                    <div class="form-group">
                        <p>
                            Click <a class="btn-link" href="@Url.Action("RecoverAccount", "home")">here</a> to recover account.
                        </p>
                    </div>
                </fieldset>
            </form>
        </div>

    </div>










