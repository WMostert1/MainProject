@model BugWeb.Models.ReportingViewModel
@{
    ViewBag.Title = "Tabular";
}
@section scripts
{
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/r/dt/jszip-2.5.0,pdfmake-0.1.18,dt-1.10.9,b-1.0.3,b-html5-1.0.3,b-print-1.0.3/datatables.min.css"/>

    <script type="text/javascript" src="https://cdn.datatables.net/r/dt/jszip-2.5.0,pdfmake-0.1.18,dt-1.10.9,b-1.0.3,b-html5-1.0.3,b-print-1.0.3/datatables.min.js"></script>
    <script src="~/Scripts/table.js"></script>
    <script src="~/Scripts/tableScout.js"></script>
    <script src="~/Scripts/tableTreatment.js"></script>
}
@section styles
{
    @Styles.Render("~/Content/table.css");
}

<script type="application/javascript">
        var recordsUrl = "@Url.Content("~/api/records/" + @Model.RecordsUrlSuffix)";
        var speciesUrl = "@Url.Content("~/api/species")";
</script>

<div class="container">
    <ul class="nav nav-tabs">
        <li class="active">
            <a href="#Scout_Data">Scouting Data</a>
        </li>
        <li>
            <a href="#Treatment_Data">Treatment Data</a>
        </li>
    </ul>

<div class="tab-content">
    
    <div id="Scout_Data" class="tab-pane fade in active">

        <div id="constraintsDivScout" class="panel-group">
            <div class="panel panel-default" style="padding: 0px">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        <span id="collapseIconScout" data-toggle="collapse" data-target="#collapsibleTableScout" class="glyphicon glyphicon-collapse-down collapse"></span>
                        <span id="resetIconScout" class="glyphicon glyphicon-refresh pull-right refresh"></span>
                        <strong> Constraints</strong>
                    </h1>
                </div>
                <div id="collapsibleTableScout" class="panel-collapse collapse in">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Farm</th>
                            <td>
                                <select id="farmScout" class="form-control farms">
                                    <option value="all">All Farms</option>
                                </select>
                            </td>
                            <th>Date</th>
                            <td rowspan="3">
                                <label for="timeFromScout">From:</label>
                                <input type="date" id="timeFromScout" class="form-control constraintScout dateFrom">

                                <label for="timeToScout">To:</label>
                                <input type="date" id="timeToScout" class="form-control constraintScout dateTo"><br/>
                                <input class="constraintScout" id="dateAnyScout" type="checkbox"> Any
                            </td>
                        </tr>
                        <tr>
                            <th>Blocks</th>
                            <td>
                                <select id="blocksScout" class="form-control constraintScout">
                                    <option value="all">All Blocks</option>
                                </select>
                            </td>

                        </tr>
                        <tr>
                            <th>Species</th>
                            <td>
                                <select id="speciesScout" class="form-control">
                                    <option value="all">All Species</option>
                                </select>
                            </td>
                        </tr>
                        <tr>
                            <th>Species instars</th>
                            <td>
                                <select id="speciesStageScout" class="form-control constraintScout">
                                    <option value="all">All Instars</option>
                                </select>
                            </td>
                            <th>View by</th>
                            <td>
                                <select id="viewScout" class="form-control constraintScout">
                                    <option value="default">Default Table</option>
                                    <option value="species">Species (Pests)</option>
                                    <option value="blockName">Blocks</option>
                                </select>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-sm-12 tableDiv" id="scoutTableDiv"></div>

    </div>

    <div id="Treatment_Data" class="tab-pane fade">
        <div id="constraintsDivTreatment" class="panel-group">
            <div class="panel panel-default" style="padding: 0px">
                <div class="panel-heading">
                    <h1 class="panel-title">
                        <span id="collapseIconTreatment" data-toggle="collapse" data-target="#collapsibleTableTreatment" class="glyphicon glyphicon-collapse-down collapse"></span>
                        <span id="resetIconTreatment" class="glyphicon glyphicon-refresh pull-right refresh"></span>
                        <strong> Constraints</strong>
                    </h1>
                </div>
                <div id="collapsibleTableTreatment" class="panel-collapse collapse in">
                    <table class="table">
                        <tbody>
                        <tr>
                            <th>Farm</th>
                            <td>
                                <select id="farmTreatment" class="form-control farms">
                                    <option value="all">All Farms</option>
                                </select>
                            </td>
                            <th>Date</th>
                            <td rowspan="3">
                                <label for="timeFromTreatment">From:</label>
                                <input type="date" id="timeFromTreatment" class="form-control constraintTreatment dateFrom">

                                <label for="timeToTreatment">To:</label>
                                <input type="date" id="timeToTreatment" class="form-control constraintTreatment dateTo"><br/>
                                <input class="constraintTreatment" id="dateAnyTreatment" type="checkbox"> Any
                            </td>
                        </tr>
                        <tr>
                            <th>Blocks</th>
                            <td>
                                <select id="blocksTreatment" class="form-control constraintTreatment">
                                    <option value="all">All Blocks</option>
                                </select>
                            </td>

                        </tr>
                        <tr>
                            <th>View by</th>
                            <td>
                                <select id="viewTreatment" class="form-control constraintTreatment">
                                    <option value="default">Default Table</option>
                                    <option value="blockName">Blocks</option>
                                </select>
                            </td>
                        </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="col-sm-12 tableDiv" id="treatmentTableDiv"></div>
        </div>
    </div>

    </div>

</div> 






